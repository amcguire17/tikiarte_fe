<div id='header'>
  <h1>My Artists</h1>
</div>

<div id='artists'>
  <% if @artists.count > 0  %>
    <div class="row row-cols-xl-3" style="text-align: center">
      <% @artists.each do |artist| %>
      <div>
        <p style="padding-top: 20px"><%= artist.username %></p>
        <div class="button" style="padding-bottom: 20px">
          <%= button_to "#{artist.username}'s Portfolio Page", user_artist_path(current_user.id, artist.id), method: :get, class: 'btn btn-outline-dark' %>
        </div>
      </div>
      <% end %>
    </div>
  <% else %>
    <p>You haven't added any Artists to your account yet.</p>
  <% end %>
</div>

<div class="button" style="padding: 20px; text-align: center">
  <%= button_to 'Add Artist', new_user_artist_path(current_user.id), method: :get, class: 'btn btn-info btn-lg' %>
</div>
